<resources>

    <!-- Base application theme. -->
    <style name="MainAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/light_navy_blue</item>
        <item name="colorPrimaryDark">@color/dark_navy_blue</item>
        <item name="colorAccent">@color/teal</item>
        <item name="android:textColor">@color/text_black_color</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="background">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MaterialAppTheme" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">@color/light_navy_blue</item>
        <item name="colorPrimaryDark">@color/dark_navy_blue</item>
        <item name="colorAccent">@color/teal</item>
        <item name="singleAccount">true</item>
        <item name="android:textColor">@color/text_black_color</item>
        <item name="drawerType">@integer/DRAWERTYPE_NO_HEADER</item>
        <item name="drawerColor">@android:color/white</item>
        <item name="uniqueToolbarColor">false</item>
        <item name="sectionStyle">@style/MaterialSectionTheme.Light</item>
        <item name="subheaderStyle">@style/MaterialSubheaderTheme.Light</item>
        <item name="learningPattern">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="background">?android:attr/selectableItemBackground</item>
        <item name="android:listSeparatorTextViewStyle">@style/PreferenceListHeader</item>
    </style>

    <style name="PopupMenu_Theme" parent="Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#000000</item>
        <item name="android:itemPadding">2dp</item>
        <item name="android:listPreferredItemHeightSmall">35dp</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@color/teal</item>
    </style>

    <style name="CustomRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/teal</item>
        <item name="colorControlActivated">@color/teal</item>
    </style>

    <style name="PreferenceListHeader">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">#cccccc</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.CustomPreferenceSetting" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:listSeparatorTextViewStyle">@style/PreferenceListHeader</item>
        <item name="android:preferenceCategoryStyle">@style/Preference.Category.Material</item>
        <item name="colorPrimary">@color/light_navy_blue</item>
        <item name="colorPrimaryDark">@color/dark_navy_blue</item>
        <item name="colorAccent">@color/teal</item>
    </style>

    <style name="AppTheme.Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/black_transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/cardview_light_background</item>
    </style>

    <style name="CustomEditTextTheme" parent="TextAppearance.AppCompat">
        <item name="android:width">5sp</item>
        <item name="colorAccent">@android:color/holo_blue_dark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@android:color/holo_blue_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
