<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="DayTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/light_navy_blue</item>
        <item name="colorPrimaryDark">@color/dark_navy_blue</item>
        <item name="colorAccent">@color/teal</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">@color/text_black_color</item>
        <item name="android:divider">@color/gray_transparent</item>
        <item name="popupMenuStyle">@style/PopupMenu_Theme</item>
        <item name="alertDialogTheme">@style/DialogTheme</item>
        <item name="android:alertDialogTheme">@style/DialogTheme</item>
        <item name="colorButtonNormal">@android:color/holo_blue_light</item>
        <item name="android:buttonStyle">@style/ButtonTheme</item>
    </style>

    <style name="DayTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="NightTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/teal</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:divider">@color/white</item>
        <item name="textColorAlertDialogListItem">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="popupMenuStyle">@style/PopupMenu_Theme</item>
        <item name="alertDialogTheme">@style/DialogTheme</item>
        <item name="android:alertDialogTheme">@style/DialogTheme</item>
        <item name="colorButtonNormal">@android:color/holo_orange_light</item>
        <item name="android:buttonStyle">@style/ButtonTheme</item>
    </style>

    <style name="NightTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="PopupMenu_Theme" parent="Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#000000</item>
        <item name="android:itemPadding">2dp</item>
        <item name="android:listPreferredItemHeightSmall">35dp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:textColor">@color/text_black_color</item>
        <item name="android:background">@color/white</item>
        <item name="colorAccent">@color/teal</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/teal</item>
    </style>

    <style name="RadioButtonTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/teal</item>
        <item name="colorControlActivated">@color/teal</item>
    </style>

    <style name="ButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NoActionBarDimTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/black_transparent_mild</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="TransparentCompact" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/black_semi_transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/cardview_light_background</item>
    </style>

    <style name="CustomEditTextTheme" parent="TextAppearance.AppCompat">
        <item name="android:width">5sp</item>
        <item name="colorAccent">@android:color/holo_blue_dark</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
